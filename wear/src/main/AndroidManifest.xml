<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">

        <!-- 1. Плитка -->
        <service
            android:name="com.example.myschedule.tile.MainTileService"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:description="@string/tile_description"
            android:exported="true"
            android:permission="com.google.android.wearable.permission.BIND_TILE_PROVIDER">
            <intent-filter>
                <action android:name="androidx.wear.tiles.action.BIND_TILE_PROVIDER" />
            </intent-filter>
            <meta-data android:name="androidx.wear.tiles.PREVIEW" android:resource="@drawable/tile_preview" />
        </service>

        <!-- 2. Слушатель -->
        <service
            android:name="com.example.myschedule.WearDataListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/schedule" />
            </intent-filter>
        </service>

        <uses-library android:name="com.google.android.wearable" android:required="true" />
        <meta-data android:name="com.google.android.wearable.standalone" android:value="false" /> <!-- Лучше false, так как мы зависим от телефона -->

        <!-- 3. Экран -->
        <activity
            android:name="com.example.myschedule.presentation.MainActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@style/MainActivityTheme.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="21dp"
        android:text="Настройка"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="76dp"
        android:text="Количество недель"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/rounded_button"
        android:text="1"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        android:layout_toEndOf="@+id/button"
        android:background="#21000000"
        android:text="2"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        android:layout_toEndOf="@+id/button2"
        android:background="#21000000"
        android:text="3"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="42dp"
        android:layout_toEndOf="@id/button3"
        android:background="@drawable/rounded_button2"
        android:text="4"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/WeekNameBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button3"
        android:text="Названия недель                             >"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/ChooseWeekendsBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WeekNameBtn"
        android:layout_centerInParent="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button3"
        android:text="Выходные                                        >"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/ChooseLessonsBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChooseWeekendsBtn"
        android:layout_centerInParent="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button3"
        android:text="Занятия                                           >"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button3"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/black" />

</RelativeLayout>
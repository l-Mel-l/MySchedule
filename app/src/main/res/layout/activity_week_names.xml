<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="21dp"
        android:text="Названия недель"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/WeekText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:text="НЕДЕЛЯ 1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/WeekNameFirst1"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/WeekText1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Введите название недели"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/WeekText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WeekNameFirst1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="НЕДЕЛЯ 2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/WeekNameFirst2"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/WeekText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Введите название недели"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/WeekText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WeekNameFirst2"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="НЕДЕЛЯ 3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/WeekNameFirst3"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/WeekText3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Введите название недели"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/WeekText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WeekNameFirst3"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="НЕДЕЛЯ 4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/WeekNameFirst4"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/WeekText4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Введите название недели"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="16dp" />


    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button3"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/BackBtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rounded_button3"
        android:text="Назад"
        android:textAllCaps="false"
        android:textColor="@color/black" />

</RelativeLayout>